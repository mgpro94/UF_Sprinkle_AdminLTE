{% block userCard %}
<li class="nav-item dropdown user-menu">
	{% block userCard_nav %}
	<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
		<img src="{{ current_user.avatar }}" class="user-image img-circle elevation-2" alt="User Image">
		<span class="d-none d-md-inline text-capitalize">{{current_user.first_name}} {{current_user.last_name}}</span>
	</a>
	{% endblock %}

	<ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
	
		{% block userCard_userInfo %}
		<!-- User image -->
		<li class="user-header bg-primary">
			<img src="{{ current_user.avatar }}" class="img-circle elevation-2" alt="User Image">

			<p>
				<span class="text-capitalize">{{current_user.first_name}} {{current_user.last_name}}</span>
				<small>({{current_user.user_name}})</small>
			</p>
		</li>
		{% endblock %}

		<!-- Menu Body -->
		<li class="user-body">
			{% block userCard_menu %}
				{% if checkAccess('uri_dashboard') %}
					<a href="{{site.uri.public}}/dashboard" class="btn btn-default btn-flat btn-block">{{translate("DASHBOARD")}}</a>
				{% endif %}
			{% endblock %}
		</li>
		<!-- Menu Footer-->
		<li class="user-footer">
			{% block userCard_footer %}
				<a href="{{site.uri.public}}/account/settings" class="btn btn-default btn-flat">{{translate("ACCOUNT.MY")}}</a>
				<a href="{{site.uri.public}}/account/logout" class="btn btn-default btn-flat float-right">{{translate("LOGOUT")}}</a>
			{% endblock %}
		</li>
	</ul>
</li>
{% endblock %}
